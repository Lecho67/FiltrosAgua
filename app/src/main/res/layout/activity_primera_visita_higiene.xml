<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5F6675">

    <!-- Tarjeta -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHigiene"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="14dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#AEB5C0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Higiene y Capacitación"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:paddingBottom="8dp"/>

            <!-- Q1: ¿Ha tenido capacitación? (Sí/No) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Ha tenido alguna vez capacitación en prácticas de higiene?"
                android:paddingBottom="6dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="12dp">

                <CheckBox
                    android:id="@+id/cbCapacitacionSi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sí"/>

                <CheckBox
                    android:id="@+id/cbCapacitacionNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <!-- Q2: Prácticas de higiene (múltiple) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Qué prácticas de higiene desarrolla en su día a día? (Opción múltiple)"
                android:paddingBottom="6dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbLavadoManos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lavado de manos"/>

                <CheckBox
                    android:id="@+id/cbLimpiezaHogar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limpieza del hogar"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="6dp">

                <CheckBox
                    android:id="@+id/cbCepillado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cepillado de dientes"/>

                <CheckBox
                    android:id="@+id/cbOtro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Otro"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <CheckBox
                android:id="@+id/cbBanoDiario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baño diario"
                android:layout_marginTop="6dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Barra inferior -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/cardHigiene"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAnteriorHigiene"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:text="ANTERIOR"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            app:cornerRadius="22dp"
            app:backgroundTint="@android:color/holo_blue_dark"/>

        <TextView
            android:id="@+id/tvSeccionHigiene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Sección 11 de 12"
            android:textColor="@android:color/white"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSiguienteHigiene"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:text="SIGUIENTE"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            app:cornerRadius="22dp"
            app:backgroundTint="@android:color/holo_blue_dark"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
